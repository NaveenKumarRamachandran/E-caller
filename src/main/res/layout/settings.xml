<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vishnu.ecaller.ECaller.Settings">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/power_on"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="0"
                android:checked="false"
                android:hint="By clicking this ECaller service run when power on"
                android:text="Run on power on"
                android:textColor="@color/button_text" />

            <CheckBox
                android:id="@+id/lockscreen"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="1"
                android:checked="false"
                android:hint="By clicking this ECaller service run when power on note:It use more memory and device may slow"
                android:text="Run only on lock screen"
                android:textColor="@color/button_text" />

            <CheckBox
                android:id="@+id/notification"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="2"
                android:checked="false"
                android:hint="By clicking notification the ECaller service is open. Note:It may insecure"
                android:text="Enable ECaller service via notification"
                android:textColor="@color/button_text" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_row="3"
                android:text="Set ECaller icon size"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/button_text" />

            <Space
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_column="0"
                android:layout_row="4" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="5"
                android:indeterminate="false" />

            <EditText
                android:id="@+id/numbertext"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="6"
                android:text="100"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/button_text" />

            <Button
                android:id="@+id/save"
                style="@android:style/Animation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="7"
                android:background="@color/button"
                android:text="Save"
                android:textColor="@color/button_text" />

            <Space
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_column="0"
                android:layout_row="8" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="9"
                android:text="Preview"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/button_text" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_column="0"
                android:layout_gravity="top|center"
                android:layout_row="10"
                android:background="@color/background"
                android:minHeight="20dp"
                android:minWidth="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_new" />
        </GridLayout>
    </ScrollView>
</RelativeLayout>
