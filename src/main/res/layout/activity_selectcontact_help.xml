<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vishnu.ecaller.ECaller.Selectcontact_help">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select contact"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/button_text" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="\t\t\t\t\t\t\t\tBy clicking the select contact the contact list will open. You can select from that. or you can type mannualy in the text box. after select or entering the contact press save to save the contact. yu can delete the contact bu pressing delete button"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/button_text" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Securitity Exception"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/button_text" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="\t\t\t\t\t\t\t\tIn android to access the contact you will need permission. In some versions like > Lollipop cant take need to set permission. This can be done in settings->application->ECaller->permission enable all the permission. Then it will work perfectly"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/button_text" />
    </LinearLayout>
</RelativeLayout>

